---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import Sidebar from '../components/Sidebar.astro';
---

<BaseLayout title="Informaci贸n Personal - SEDI">
  <Sidebar />

  <div class="flex flex-col min-h-screen">
    <Header showUserInfo={false} />

    <main class="flex-1 bg-gray-100 p-6">
      <div class="max-w-4xl mx-auto">
        <div class="bg-white rounded-lg shadow-lg p-8">
          <h1 class="text-3xl font-bold text-gray-800 mb-6">Mi nformaci贸n Personal</h1>
          
          <div class="space-y-6">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
              <div>
                <label for="fullName" class="block text-sm font-semibold text-gray-700 mb-2">Nombre(s)</label>
                <input id="fullName" type="text" class="w-full border border-gray-300 rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-[#8b7355]" placeholder="Ejem. Juan" />
              </div>

               <div>
                <label for="fullName" class="block text-sm font-semibold text-gray-700 mb-2">Apellido Paterno</label>
                <input id="fullName" type="text" class="w-full border border-gray-300 rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-[#8b7355]" placeholder="Ejem, Michel" />
              </div>

               <div>
                <label for="fullName" class="block text-sm font-semibold text-gray-700 mb-2">Apellido Materno</label>
                <input id="fullName" type="text" class="w-full border border-gray-300 rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-[#8b7355]" placeholder="Ejem. Lopez" />
              </div>

              <div>
                <label for="institutionalEmail" class="block text-sm font-semibold text-gray-700 mb-2">Fecha de nacimiento</label>
                <input id="institutionalEmail" type="email" class="w-full border border-gray-300 rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-[#8b7355]" placeholder="Ejem. 20/12/1978" />
              </div>

               <div>
                <label for="fullName" class="block text-sm font-semibold text-gray-700 mb-2">Nombramiento actual</label>
                <input id="fullName" type="text" class="w-full border border-gray-300 rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-[#8b7355]" placeholder="Ejem. PROFR ORD. DE CARRERA TIT, B" />
              </div>

               <div>
                <label for="institutionalEmail" class="block text-sm font-semibold text-gray-700 mb-2">Fecha de contrataci贸n</label>
                <input id="institutionalEmail" type="email" class="w-full border border-gray-300 rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-[#8b7355]" placeholder="Ejem. 20/12/1978" />
              </div>

              <div>
                <label for="phone" class="block text-sm font-semibold text-gray-700 mb-2">Cedula profesional</label>
                <input id="phone" type="tel" class="w-full border border-gray-300 rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-[#8b7355]" placeholder="Ejem. 664-123-4567" />
              </div>

            <div class="flex justify-end gap-4 mt-8">
              <button id="cancel-btn" class="bg-gray-500 hover:bg-gray-600 text-white px-6 py-2 rounded-lg transition-colors">
                Cancelar
              </button>
              <button id="save-btn" class="bg-[#8b7355] hover:bg-[#7a6349] text-white px-6 py-2 rounded-lg transition-colors">
                Guardar cambios
              </button>
            </div>
          </div>
        </div>
      </div>
    </main>

    <Footer />
  </div>
</BaseLayout>

<script>
  const saveBtn = document.getElementById('save-btn');
  const cancelBtn = document.getElementById('cancel-btn');

  if (saveBtn) {
    saveBtn.addEventListener('click', () => {
      alert('Cambios guardados correctamente (simulaci贸n sin backend)');
    });
  }

  if (cancelBtn) {
    cancelBtn.addEventListener('click', () => {
      window.location.href = '/dashboard';
    });
  }
</script>
